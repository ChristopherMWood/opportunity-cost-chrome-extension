{
  "name": "Youtube Opportunity Cost",
  "description": "Calculates the combined time spent watching any video on YouTube.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "./src/icons/icon16.png",
    "32": "./src/icons/icon32.png",
    "48": "./src/icons/icon48.png",
    "128": "./src/icons/icon128.png"
  },
  "action": {
    "default_title": "Youtube Opportunity Cost",
    "default_popup": "/src/action/popup.html"
  },
  "background": {
    "service_worker": "/src/background/background.js"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "offline_enabled": false,
  "short_name": "Opportunity Cost"
}